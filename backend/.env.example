# Environment
NODE_ENV=development
PORT=3000

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost/auth/google/callback

# JWT
JWT_SECRET=your_very_strong_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Database
DATABASE_URL=postgresql://auth:auth@auth-db:5432/auth

# Initial Admin (Google email)
INITIAL_ADMIN_EMAIL=your_email@gmail.com

# CORS
ALLOWED_ORIGINS=http://localhost,http://localhost:5173,https://hstarsp.net

# Session
SESSION_SECRET=your_session_secret_change_this_in_production
